<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="Endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtEndereco"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        />

    <TextView
        android:text="Numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtnumero"
        android:layout_marginStart="8dp"
        />

    <TextView
        android:text="Contactar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtContactar"
        android:layout_marginStart="8dp"
        />


    <TextView
        android:text="Detalhes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDetalhes"
        android:layout_marginStart="8dp"
        />

    <TextView
        android:text="ServiÃ§o de Banco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtBanco"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        />

    <Button
        android:text="Mapa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btMap"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:elevation="2dp"
        android:background="@android:color/holo_orange_light"
        android:onClick="btMapaDetalhe" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtStartTravel"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textStyle="bold"
        />

    <Button
        android:text="Iniciar Viagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btStart"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:elevation="2dp"
        android:background="@android:color/holo_blue_dark"
        android:onClick="btStartTravel" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/spinner"
        />


    <Button
        android:text="Concluir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btConcluida"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:elevation="2dp"
        android:background="@android:color/holo_green_dark"
        android:enabled="false"
        android:onClick="btEndTravel" />

</LinearLayout>
